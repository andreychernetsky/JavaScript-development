<body>

  <script>
  'use strict';
/*1) есть функция с двумя параметрами
2) в вызов функции передаем два значения find(arr, "test")
3) value это второй параметр при вызове функции find(arr, 2), но могу ошибаться
4) параметр,который находится в value сравнивается с элементом массива
5) если есть такой элемент, то выводим return i;
*/
function find(arr, value) {
  let value;// какую роль выполняет эта переменная?
  for (let i = 0; i < arr.length; i++) {
    if (arr[i] === value) {
      return i;
    } else {
      return -1;
    }
  }
}

const arr = ["test", 2, 1.5, false];

console.log(find(arr, "test"));
console.log(find(arr, 2));
console.log(find(arr, 1.5));
console.log(find(arr, 0));


  </script>

</body>
