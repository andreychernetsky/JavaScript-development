<html>
<body>
<script>
  'use strict'
  function sum(){
    let totalSum = 0;
    for (let i = 0; i < arguments.length; i++) {
      totalSum += arguments[i];
      }
     console.log(totalSum);
    }

  sum(); // = 0
  sum(1); // = 1
  sum(1, 2); // = 3
  sum(1, 2, 3); // = 6
  sum(1, 2, 3, 4); // = 10
  //

</script>
</body>
</html>
